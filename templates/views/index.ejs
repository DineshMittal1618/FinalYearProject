<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EasyPrinting</title>
    <link rel="stylesheet" href="./css/style.css">
       
</head>
<body>
        <div class="hero">
            <div class="form-box">
                    <div class="button-box">
                        <div id="btn"></div>
                        <button class="toggle-btn" onclick="login()">Login</button>
                        <button class="toggle-btn" onclick="register()">Register</button>
                    </div>
                    <div class="social-icons">
                        <img src="./img/fb.png">
                        <img src="./img/tw.png">
                        <img src="./img/gp.png">
                    </div>
                    <form id="login"  class="input-group" action="/users/login" method="post">
                        <input type="text" class="input-field" placeholder="User Id" name="email" required>
                        <input type="password" class="input-field" placeholder="Password" name="password" required>
                        <input type="checkbox" class="check-box"><span>Remember Password</span>
                        <button type="submit" class="submit-btn">Log in</button>
                    </form>
                    <form id="register"  class="input-group" action="/users" method="post">
                        <input type="text" class="input-field" placeholder="Username" name="name" required>
                        <input type="password" class="input-field" placeholder="Password" name="password" required>
                        <input type="text" class="input-field" placeholder="email id" name="email" required>
                        <input type="checkbox" class="check-box" required><span>I agree to terms and conditions</span>
                        <button type="submit" class="submit-btn">Register</button>
                    </form>
            </div>
        </div>

        <script>
            var x=document.getElementById("login");
            var y=document.getElementById("register");
            var z=document.getElementById("btn");

            function register(){
                x.style.left="-400px";
                y.style.left="50px";
                z.style.left="110px";
                
            }

            function login(){
                x.style.left="50px";
                y.style.left="450px";
                z.style.left="0px";
            }
        </script>
</body>
</html>